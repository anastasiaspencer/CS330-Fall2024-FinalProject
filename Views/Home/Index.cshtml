@{
    ViewData["Title"] = "Snow Ski Team Home Page";
}

@section Scripts {
    <script src="~/js/snowReport.js"></script>
}

<div class="container text-center mt-5">
    <h1 class="display-3 text-primary">Snow Ski</h1>
    <p class="lead text-secondary">#1 in the SEC</p>
</div>

<!-- About Us Section -->
<section class="my-5 bg-light py-4 rounded shadow">
    <div class="container">
        <h2 class="display-5 text-primary">About Us</h2>
        <p class="text-muted">
            Welcome to the Snow Ski Team! We're dedicated to excellence on the slopes and in the classroom. Our team
            has consistently ranked #1 in the SEC, showcasing unparalleled performance and sportsmanship.
        </p>
    </div>
</section>

 
 <div id="snow-report1" class="mt-4"></div>
 <div id="snow-report2" class="mt-4"></div>
 <div id="snow-report3" class="mt-4"></div>

<!-- Chat Bot Button -->
<div class="text-center my-5">
    <button class="btn btn-lg btn-primary shadow" onclick="goToChatBot()">Chat with Our Team Bot</button>
</div>

<!-- Divider line -->
<hr class="my-5">


<!-- Team Gallery Section -->
<section class="my-5">
    <div class="container">
        <h2 class="display-5 text-primary text-center">Team Gallery</h2>
        <p class="text-secondary text-center mb-4">A glimpse of our incredible journey on and off the slopes.</p>
        <div class="row">
            <div class="col-md-4 mb-4">
                <img src="~/Images/images.jpeg" alt="Ski Photo" class="img-fluid rounded">
            </div>
            <div class="col-md-4 mb-4">
                <img src="~/Images/images.jpeg" alt="Ski Photo" class="img-fluid rounded">
            </div>
            <div class="col-md-4 mb-4">
                <img src="~/Images/images.jpeg" alt="Ski Photo" class="img-fluid rounded">
            </div>
        </div>
    </div>
</section>

