@{
    ViewData["Title"] = "Snow Ski Team Home Page";
}

<script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>

@section Scripts {
    <script src="~/js/snowReport.js"></script>
    <script src="~/js/homepageSnowParticles.js"></script>
}

<body class="index-page">
    <main class="main">

    <div id="snow-particles"></div>
        <!-- Hero Section -->
    <section id="hero" class="hero section accent-background">

        <img src="~/assets/img/hero-bg.jpg" alt="" data-aos="fade-in">
        <div class="container text-center" data-aos="fade-up" data-aos-delay="100">
            <h2>Snow Ski Team</h2>
            <p>#1 in the SEC</p>
        </div>

    </section>

        <!-- About Section -->
    <section id="about" class="about section">

      <div class="container">

        <div class="row gy-5">

            <div class="content col-xl-5 d-flex flex-column" data-aos="fade-up" data-aos-delay="100">
                <h3>About The Team</h3>
                <p>
                    Welcome to the Snow Ski Team! We're dedicated to excellence on the slopes and in the classroom. Our team
                    has consistently ranked #1 in the SEC, showcasing unparalleled performance and sportsmanship.          
                </p>
            </div>

            <div class="col-md-6">
                <img id="homepage-snowglobe-svg" src="~/Images/homepage-snowglobe.svg" alt="Snow Globe" class="img-fluid">
            </div>

        </div>
      </div>
    </section><!-- /About Section -->

    <!-- Snow Report Section -->
    <section id="reports" class="report section">

      <!-- Section Title -->
      <div class="container section-title">
        <h2>Current Snow Conditions</h2>
        <p>Stay updated with the latest snow conditions for your favorite slopes.</p>
      </div><!-- End Section Title -->

      <div class="container pb-4">

        <div class="row row-cols-1 row-cols-md-3 gy-4 pb-5">

            <!-- Snow Report 1 -->
            <div class="col-lg-4 d-flex justify-content-center pb-3">
                <div class="report-item position-relative text-center border p-4 rounded shadow">
                    <div id="snow-report1" class="stretched-link">
                        <h1>Loading . . .</h1>
                    </div>
                </div>
            </div>

            <!-- Snow Report 2 -->
            <div class="col-lg-4 d-flex justify-content-center pb-3">
                <div class="report-item position-relative text-center border p-4 rounded shadow">
                    <div id="snow-report2" class="stretched-link">
                        <h1>Loading . . .</h1>
                    </div>
                </div>
            </div>

            <!-- Snow Report 3 -->
            <div class="col-lg-4 d-flex justify-content-center pb-3">
                <div class="report-item position-relative text-center border p-4 rounded shadow">
                    <div id="snow-report3" class="stretched-link">
                        <h1>Loading . . .</h1>
                    </div>
                </div>
            </div>

        </div>

      </div>

    </section><!-- /Snow Report Section -->

        <!-- Call To Action Section -->
    <section id="call-to-action" class="call-to-action section accent-background">

      <img src="assets/img/cta-bg.jpg" alt="">

      <div class="container">
        <div class="row justify-content-center" data-aos="zoom-in" data-aos-delay="100">
            <div class="col-xl-10">
                <div class="text-center">
                    <h2>Team Schedule</h2>
                    <p>Come support the team on the slopes!</p>
                    <a class="cta-btn" href="/Schedule">Schedule</a>
                </div>
            </div>
        </div>
      </div>

    </section><!-- /Call To Action Section -->

        <!-- Portfolio Section -->
    <section id="portfolio" class="portfolio section">

      <!-- Section Title -->
      <div class="container section-title" data-aos="fade-up">
        <h2>Team Gallery</h2>
        <p>A glimpse of our incredible journey on and off the slopes.</p>
      </div><!-- End Section Title -->

      <div class="container">

        <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">

          <div class="row gy-4 isotope-container pb-5" data-aos="fade-up" data-aos-delay="200">

            <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-app">
                <img src="~/Images/teamgallery-1.svg" alt="Ski Photo" class="img-fluid rounded shadow-sm">
            </div><!-- End Portfolio Item -->

            <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-product">
                <img src="~/Images/teamgallery-2.svg" alt="Ski Photo" class="img-fluid rounded shadow-sm">
            </div><!-- End Portfolio Item -->

            <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-branding">
                <img src="~/Images/teamgallery-3.svg" alt="Ski Photo" class="img-fluid rounded shadow-sm">
            </div><!-- End Portfolio Item -->

            <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-books">
                <img src="~/Images/teamgallery-3.svg" alt="Ski Photo" class="img-fluid rounded shadow-sm">
            </div><!-- End Portfolio Item -->

            <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-app">
                <img src="~/Images/teamgallery-1.svg" alt="Ski Photo" class="img-fluid rounded shadow-sm">
            </div><!-- End Portfolio Item -->

            <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-product">
                <img src="~/Images/teamgallery-2.svg" alt="Ski Photo" class="img-fluid rounded shadow-sm">
            </div><!-- End Portfolio Item -->

          </div><!-- End Portfolio Container -->

        </div>

      </div>

    </section><!-- /Portfolio Section -->

    </main>

</body>
    
