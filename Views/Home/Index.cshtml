<div class="text-center my-5">
    <button class="btn btn-lg btn-primary shadow px-5" onclick="goToChatBot()">Chat with Our Team Bot</button>
</div> *@

<!-- Chat Bot Button -->
<div class="text-center my-5">
    <button class="btn btn-primary btn-chat shadow-lg px-5 py-3" onclick="goToChatBot()">
        Chat with Our Team Bot
    </button>
</div>


<!-- Divider -->
<hr class="my-4 border-primary">

<!-- Team Gallery Section -->
<section id="team-gallery-section" class="my-5 py-5">
    <div class="container">
        <h2 class="display-5 text-primary text-center mb-4">Team Gallery</h2>
        <p class="text-secondary text-center fs-5">A glimpse of our incredible journey on and off the slopes.</p>
        <div class="row">
            <div class="col-md-4 mb-4">
                <img src="~/Images/images.jpeg" alt="Ski Photo" class="img-fluid rounded shadow-sm">
            </div>
            <div class="col-md-4 mb-4">
                <img src="~/Images/images.jpeg" alt="Ski Photo" class="img-fluid rounded shadow-sm">
            </div>
            <div class="col-md-4 mb-4">
                <img src="~/Images/images.jpeg" alt="Ski Photo" class="img-fluid rounded shadow-sm">
            </div>
        </div>
    </div>
</section>

<!-- Divider -->
<hr class="my-4 border-primary">
