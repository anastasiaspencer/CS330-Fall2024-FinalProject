@{
    ViewData["Title"] = "Snow Ski Team Home Page";
}

<script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>

@section Scripts {
    <script src="~/js/snowReport.js"></script>
    <script src="~/js/homepageSnowParticles.js"></script>
}

<body id="homepage-section">
    <div class="container text-center mt-5">
        <h1 class="display-6 text-primary fw-bold">Snow Ski</h1>
        <p class="lead text-secondary">#1 in the SEC</p>
    </div>

    <div id="snow-particles"></div>


    <!-- About Us Section -->
    <div id="about-us-section" class="position-relative">
        <div id="snow-particles"></div>
        <section class="my-5 bg-light py-4 rounded shadow">
            <div id="about-us-container-section" class="container text-center position-relative">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <p class="text-muted">
                            Welcome to the Snow Ski Team! We're dedicated to excellence on the slopes and in the classroom. Our team
                            has consistently ranked #1 in the SEC, showcasing unparalleled performance and sportsmanship.
                        </p>
                    </div>
                    <div class="col-md-6">
                        <img id="homepage-snowglobe-svg" src="~/Images/homepage-snowglobe.svg" alt="Snow Globe" class="img-fluid">
                    </div>
                </div>
            </div>
        </section>
    </div>



    <!-- Snow Report Section -->
    <section id="snow-report-section" class="my-5 py-5" >
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-center ">
                    <img id="homepage-weather-svg" src="~/Images/homepage-weather.svg" alt="Snow Globe" class="img-fluid mt-5" >
                </div>

                <div class="col-md-6">
                    <h2 class="text-primary mb-4 ms-0">Current Snow Conditions</h2>
                    <p class="text-secondary fs-6 text-wrap">Stay updated with the latest snow conditions</p>
                    <p class="text-secondary fs-6 text-wrap">for your favorite slopes.</p>
                </div>
            </div>
            
            <br><br>

            <!-- Snow Report Cards -->
            <!-- for reference, reference to wwwroot/js/snowReport.js (try block)  -->
            <div class="row mt-5">
                <div class="col-md-4">
                    <!-- for reference, the background color for these divs for the 3 reports/locations are in site.css, about-us-section the id'script and search  -->
                    <div id="snow-report1" class="card snow-card border border-2 border-black rounded-3 shadow-sm p-3 h-100">
                        <h1>Loading . . .</h1>
                    </div>
                </div>
                <div class="col-md-4">
                    <div id="snow-report2" class="card snow-card border border-2 border-black rounded-3 shadow-sm p-3 h-100">
                        <h1>Loading . . .</h1>
                    </div>
                </div>
                <div class="col-md-4">
                    <div id="snow-report3" class="card snow-card border border-2 border-black rounded-3 shadow-sm p-3 h-100">
                        <h1>Loading . . .</h1>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- using chat-bot in layout instead of home-page  -->
    @* <!-- Chat Bot Button; styling is in wwwroot/css/site.css under .btn-chat (NOT #chat-bot-button) -->
    <div class="text-center my-5">
        <button id="chat-bot-button" class="btn btn-primary btn-chat shadow-lg px-5 py-3" onclick="goToChatBot()">
            Chat with Our Team Bot
        </button>
    </div> *@


    <!-- Divider -->
    <hr class="my-4 border-primary">

    <!-- Team Gallery Section -->
    <section id="team-gallery-section" class="my-5 py-5">
        <div class="container">
            <h2 id="home-page-section-titles-1" class="display-5 text-primary text-center mb-4 display-6">Team Gallery</h2>
            <p class="text-secondary text-center fs-5">A glimpse of our incredible journey on and off the slopes.</p>
            <br></br>
            <div class="row justify-content-center">
                <div class="col-md-4 mb-4 d-flex justify-content-center">
                    <img src="~/Images/teamgallery-1.svg" alt="Ski Photo" class="img-fluid rounded shadow-sm">
                </div>
                <div class="col-md-4 mb-4 d-flex justify-content-center">
                    <img src="~/Images/teamgallery-2.svg" alt="Ski Photo" class="img-fluid rounded shadow-sm">
                </div>
                <div class="col-md-4 mb-4 d-flex justify-content-center">
                    <img src="~/Images/teamgallery-3.svg" alt="Ski Photo" class="img-fluid rounded shadow-sm">
                </div>
            </div>
        </div>
    </section>


    <!-- Divider -->
    <hr class="my-4 border-primary">

</body>
    
