@model CS330_Fall2024_FinalProject.Models.RosterViewModel


@* -Roster View *@
@{
    ViewData["Title"] = "Roster Page";
}

@section Scripts {
    <script src="~/js/roster.js"></script>
}

<div class="container text-center mt-5">
    <h1 class="display-6 text-primary fw-bold">Team Roster</h1>
    <p class="lead text-secondary mt-3 fs-6">Meet our amazing athletes and view their stats.</p>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <!-- search bar -->
            <div class="mb-4">
                <input type="text" id="searchInput" class="form-control" placeholder="Search athletes by name or number">
            </div>

            <form asp-action="GenerateAverageReport" method="post">
                <input type="hidden" name="id" >
                <button type="submit" class="btn btn-primary btn-sm">Generate Average Report</button>
            </form>
            
            <hr>
        
            <!-- roster table -->
            <table class="table table-striped table-hover border shadow-sm rounded" id="rosterTable">
                <thead class="table-primary">
                    <tr class="container justify-content-center text-center">
                        <th scope="col">Profile Picture</th>
                        <th scope="col">Name</th>
                        <th scope="col">ID</th>
                        <th scope="col">Birthday</th>
                        <th scope="col">Ski Level</th>
                        @* <th scope="col">Ranking</th> *@
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var athlete in Model.Athletes)
                    {
                        <tr>
                            <td class="text-center">
                                @if (athlete.ProfilePicture != null)
                                {
                                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(athlete.ProfilePicture)" 
                                         alt="Profile Picture" 
                                         class="img-thumbnail" 
                                         style="max-width: 100px;" />
                                }
                                else
                                {
                                    <p>No profile picture available.</p>
                                }
                            </td>
                            <td class="text-center">@athlete.Name</td>
                            <td class="text-center">@athlete.Id</td>
                            <td class="text-center">@athlete.Birthday</td>
                            <td class="text-center">@athlete.SkiLevel</td>
                            @* <td class="text-center">@athlete.Ranking</td>     *@
                            <td class="d-flex flex-column align-items-center gap-3">
                                <div class="w-100 d-flex justify-content-center">
                                    <button class="btn btn-primary btn-sm w-50">See Athlete Stats</button>
                                </div>                                
                                <div class="w-100 d-flex justify-content-center">
                                    <form asp-action="DeleteAthlete" method="post" class="w-50">
                                        <input type="hidden" name="id" value="@athlete.Id">
                                        <button type="submit" class="btn btn-primary btn-sm w-100">Delete Athlete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

