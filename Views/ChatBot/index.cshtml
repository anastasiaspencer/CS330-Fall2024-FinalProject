@{
    Layout = "~/Views/ChatBot/chatbot_Layout.cshtml";
}

@model CS330_Fall2024_FinalProject.Models.ChatBot
<head>
    <meta charset="utf-8" />
    <title></title>

</head>

<body>
    <div class="container text-center my-5 border-1">
        <h1 class="display-6 text-primary fw-bold" id="Title"> Welcome to Ski Bot! </h1> <!-- our chat bot -->
        <p class="lead text-secondary"> Your helpful assistant for all things snow skiing. </p>
        <hr>

        <br>
        @if (Model == null) {
            <form asp-action="GenerateResponse" method="post">
                <div class="form-group">
                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <input type="text" id="userPrompt" name="userPrompt" class="form-control" required placeholder="Enter your prompt:" />
                            <br><br>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mt-2">Submit</button>
            
            </form>
        }
        else {
            @if (Model != null && Model.response.Any()) {
                <div class="mt-3 p-3 rounded border border-info shadow-sm bg-light">
                    @foreach (var response in Model.response) {
                        <p class="mb-2 text-dark">@Html.Raw(response.Replace("\n", "<br>"))</p>
                    }
                    <a href="/ChatBot" class="btn btn-primary mt-2">Go Back</a>


                </div>
            } else
                { <p id="Summary"> Sorry! Ski Bot is currently out of service! </p>}
            }
        <br />
    </div>
</body>

