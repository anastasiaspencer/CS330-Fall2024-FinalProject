@* Team Stats Page *@
@{
    ViewData["Title"] = "Snow Ski Team Stats Page";
}

<body class="secondary-page">
    <main class="main">
        <div class="page-title accent-background">
            <div class="container position-relative">
                <h2>Snow Ski Team Stats</h2>
                <p >Explore the team's performance, achievements, and history.</p>
            </div>
        </div>

        <!-- Divider -->
        <hr class="my-5 border-primary">

        <div class="container mt-5">
            <div class="row align-items-center">
                <!-- Logged in User's Stats Content -->
                <div class="col-lg-6">
                    <!-- site.css for team performance, wins losses, team history text-->
                    <h2 id="stats-page-section-titles-1" class="mb-3">Personal Stats</h2>
                    <p class="text-left mb-4">My metrics such as points scored, average time, and other statistics.</p>
                    <ul class="list-group">
                        <li class="list-group-item">Average Points: TBD</li>
                        <li class="list-group-item">Fastest Time: TBD</li>
                        <li class="list-group-item">Total Competitions: TBD</li>
                    </ul>
                </div>

                <!-- SVG Image -->
                <div class="col-lg-6 text-center">
                    <img id="statspage-charts2-svg" src="~/Images/statspage-charts2.svg" alt="Team Stats Charts" class="img-fluid">
                </div>
            </div>
        </div>

        <!-- Divider -->
        <hr class="my-5 border-secondary">

        <div class="container mt-5">
            <div class="row align-items-center">
                <!-- SVG Image -->
                <div class="col-lg-6 text-center mb-4 mb-lg-0">
                    <img id="statspage-charts-svg" src="~/Images/statspage-charts.svg" alt="Team Stats Charts" class="img-fluid">
                </div>

                <!-- Stats Content -->
                <div class="col-lg-6">
                    <!-- site.css for team performance, wins losses, team history text-->
                    <h2 id="stats-page-section-titles-1" class="mb-3">Team Performance</h2>
                    <p class="text-left mb-4">Performance metrics such as points scored, average time, and other statistics.</p>
                    <ul class="list-group">
                        <li class="list-group-item">Average Points: TBD</li>
                        <li class="list-group-item">Fastest Time: TBD</li>
                        <li class="list-group-item">Total Competitions: TBD</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Divider -->
        <hr class="my-5 border-secondary">

        <div class="container mt-5">
            <div class="row align-items-center">
                <!-- Stats Content -->
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <h2 id="stats-page-section-titles-2" class="mb-3">Wins & Losses</h2>
                    <p class="text-left mb-4">Win-loss records and competition outcomes.</p>
                    <ul class="list-group">
                        <li class="list-group-item">Wins: TBD</li>
                        <li class="list-group-item">Losses: TBD</li>
                        <li class="list-group-item">Win Percentage: TBD</li>
                    </ul>
                </div>

                <!-- SVG Image -->
                <div class="col-lg-6 text-center">
                    <img id="statspage-charts2-svg" src="~/Images/statspage-charts2.svg" alt="Team Stats Charts" class="img-fluid">
                </div>
            </div>
        </div>

        <!-- Divider -->
        <hr class="my-5 border-primary">

        <div class="container mt-5">
            <h2 id="stats-page-section-titles-3" class="text-center mb-4">Team History</h2>
            <p class="text-secondary text-center mb-4">Learn about the team's past achievements and milestones.</p>
            <div id="stats-page-team-history-1" class="card mt-3 mx-auto">
                <div class="card-body">
                    <h5 class="card-title">Yearly Highlights</h5>
                    <p class="card-text">
                        Can do like historial data such as major victories, records set, and other notable events...
                    </p>
                </div>
            </div>
        </div>

        <br><br>

    </main>
</body>



