@* -team stats page with team performance, wins, losses and history *@
@{
    ViewData["Title"] = "Snow Ski Team Stats Page";
}

<div class="container text-center mt-5">
    <h1 class="display-3 text-primary">Snow Ski Team Stats</h1>
    <p class="lead text-secondary mt-3">Explore the team's performance, achievements, and history.</p>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 d-flex flex-column align-items-center">
            <h2 class="text-primary">Team Performance</h2>
            <p class="text-center">Performance metrics such as points scored, average time, and other statistics.</p>
            <ul class="list-group w-75">
                <li class="list-group-item">Average Points: TBD</li>
                <li class="list-group-item">Fastest Time: TBD</li>
                <li class="list-group-item">Total Competitions: TBD</li>
            </ul>
        </div>
        <div class="col-md-6 d-flex flex-column align-items-center">
            <h2 class="text-primary">Wins & Losses</h2>
            <p class="text-center">Win-loss records and competition outcomes.</p>
            <ul class="list-group w-75">
                <li class="list-group-item">Wins: TBD</li>
                <li class="list-group-item">Losses: TBD</li>
                <li class="list-group-item">Win Percentage: TBD</li>
            </ul>
        </div>
    </div>
</div>

<div class="container mt-5">
    <h2 class="text-primary text-center">Team History</h2>
    <p class="text-secondary text-center">Learn about the team's past achievements and milestones.</p>
    <div class="card mt-3 mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <h5 class="card-title">Yearly Highlights</h5>
            <p class="card-text">
                Can do like historial data such as major victories, records set, and other notable events...
            </p>
        </div>
    </div>
</div>
