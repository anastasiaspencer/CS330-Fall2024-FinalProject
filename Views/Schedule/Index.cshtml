@* -schedule page for games, practices, and events- *@
@{
    ViewData["Title"] = "Snow Ski Team Schedule Page";
}

<div class="container text-center mt-5">
    <h1 class="display-5 text-primary fw-bold">Snow Ski Team Schedule</h1>
    <p class="lead text-secondary mt-3">Stay up-to-date with our games, practices, and upcoming events.</p>
</div>

<!-- Divider -->
<hr class="my-5 border-primary">

<!-- Schedule Content -->
<div class="container mt-5">
    <div class="row align-items-center mb-5">
        <!-- Games Section -->
        <div class="col-md-12 text-center">
            <h2 class="text-primary mb-4">Games</h2>
            <img src="~/Images/schedulepage-1.svg" alt="Games Schedule" class="img-fluid mb-3" style="max-width: 30%; height: auto;">
            <br><br>
            <br><br>
            <ul class="list-group w-50 mx-auto">
                <li class="list-group-item">Game 1: TBD</li>
                <li class="list-group-item">Game 2: TBD</li>
                <li class="list-group-item">Game 3: TBD</li>
            </ul>
        </div>
    </div>

    <!-- Divider -->
    <hr class="my-5 border-secondary">

    <div class="row align-items-center mb-5">
        <!-- Practices Section -->
        <div class="col-md-12 text-center">
            <h2 class="text-primary mb-4">Practices</h2>
            <img src="~/Images/schedulepage-2.svg" alt="Practices Schedule" class="img-fluid mb-3" style="max-width: 25%; height: auto;">
            <br><br>
            <br><br>
            <ul class="list-group w-50 mx-auto">
                <li class="list-group-item">Practice 1: TBD</li>
                <li class="list-group-item">Practice 2: TBD</li>
                <li class="list-group-item">Practice 3: TBD</li>
            </ul>
        </div>
    </div>

    <!-- Divider -->
    <hr class="my-5 border-primary">

    <div class="row align-items-center">
        <!-- Events Section -->
        <div class="col-md-12 text-center">
            <h2 class="text-primary mb-4">Events</h2>
            <img src="~/Images/schedulepage-3.svg" alt="Events Schedule" class="img-fluid mb-3" style="max-width: 25%; height: auto;">
            <br><br>
            <br><br>
            <ul class="list-group w-50 mx-auto">
                <li class="list-group-item">Event 1: TBD</li>
                <li class="list-group-item">Event 2: TBD</li>
                <li class="list-group-item">Event 3: TBD</li>
            </ul>
        </div>
    </div>
</div>
