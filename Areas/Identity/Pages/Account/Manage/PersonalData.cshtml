@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 class="container text-left mt-5 ms-5">@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <p class="container text-center mt-5 ms-5">Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
        <p class="container text-center mt-5 ms-5">
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>
        <br>
        
        <br>
        <p>
            <form id="download-data" asp-page="DownloadPersonalData" method="post">
                <button class=" btn btn-primary container text-center ms-5 border-0" type="submit">Download</button>
            </form>
            <br>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger container text-center ms-5">Delete</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
